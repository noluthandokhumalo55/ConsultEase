<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/green" /> <!-- Color when checked -->
            <size android:width="60dp" android:height="30dp"/> <!-- Change to desired size -->
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="@color/light_green" /> <!-- Color when unchecked -->
            <size android:width="60dp" android:height="30dp"/> <!-- Change to desired size -->
        </shape>
    </item>
</selector>
