<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:padding="16dp">
    <!-- Price List with Image Buttons -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:padding="16dp">
    <ImageButton
        android:id="@+id/btnItem1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/wifi"
        android:contentDescription="Wifi"
        android:layout_marginEnd="100dp"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="WiFi R500"/>
        </LinearLayout>
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:padding="16dp">
    <ImageButton
        android:id="@+id/btnItem2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/helpdesk"
        android:contentDescription="IT Support Services"
        />
        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="IT Support Services R5000"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:padding="16dp">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:padding="16dp">
    <ImageButton
        android:id="@+id/btnItem3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/telephone"
        android:contentDescription="Telephone"
        android:layout_marginEnd="100dp"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="Telephone R800"/>
        </LinearLayout>
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:padding="16dp">
    <ImageButton
        android:id="@+id/btnItem4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/stationery"
        android:contentDescription="Stationey"
        />
            <TextView
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="Stationery R800"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
