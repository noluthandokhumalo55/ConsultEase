<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xbcad7319.FragmentReportsview">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title TextView -->
            <TextView
                android:id="@+id/titleTextViewtitel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginBottom="16dp" />

            <!-- First ScrollView -->
            <ScrollView
                android:id="@+id/scrollview1"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/contentTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Content for the first ScrollView"
                        android:textSize="16sp" />
                </LinearLayout>
            </ScrollView>

            <TextView
                android:id="@+id/detailsTextViewdetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Details"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Second ScrollView -->
            <ScrollView
                android:id="@+id/scrollview23"
                android:layout_width="match_parent"
                android:layout_height="502dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/contentTextView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Content for the second ScrollView"
                        android:textSize="16sp" />
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </FrameLayout>