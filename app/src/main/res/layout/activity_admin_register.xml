<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="326dp"
            android:layout_height="170dp"
            app:srcCompat="@drawable/top_background"
            tools:layout_editor_absoluteX="-44dp"
            tools:layout_editor_absoluteY="-10dp"
            android:layout_marginStart="-3sp"/>

        <TextView
            android:id="@+id/Register"
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/acme"
            android:text="Register"
            android:textColor="@color/white"
            android:textSize="39sp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"/>

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/toogle_background"
            android:thumb="@drawable/toggle_thumb"
            android:checked="false"
            android:padding="0dp"
            android:layout_marginTop="-180dp"
            android:layout_gravity="center"
            android:textOff="Admin"
            android:textOn="Client"
            android:textColor="@android:color/black"/>

        <EditText
            android:id="@+id/fullname"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:hint="Full name"
            android:background="@drawable/border"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:layout_marginTop="-115dp"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:hint="Email"
            android:background="@drawable/border"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:layout_marginTop="-45dp"
            android:layout_gravity="center"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pinInputLayout"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="375dp"
            app:passwordToggleEnabled="true">
        <EditText
            android:id="@+id/number"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:hint="Pin"
            android:background="@drawable/border"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:layout_marginTop="130dp"
            android:layout_gravity="center"/>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordInputLayout"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="440dp"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/password"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="-15dp"
                android:background="@drawable/border"
                android:hint="Password"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:textSize="25sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/cpasswordInputLayout"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="505dp"
            app:passwordToggleEnabled="true">
        <EditText
            android:id="@+id/cpassword"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:hint="Confirm Password"
            android:background="@drawable/border"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:layout_marginTop="165dp"
            android:layout_gravity="center"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:text="Register"
            android:textSize="23sp"
            android:layout_gravity="center"
            android:layout_marginTop="235dp"
            android:backgroundTint="@color/green"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_marginTop="645dp"
            android:text="Have an account?"
            android:textColor="@color/green"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/rLogin"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_marginTop="660dp"
            android:text="Login"
            android:textColor="@color/green"
            android:textSize="20sp"
            android:textStyle="italic"
            android:clickable="true"
            android:focusable="true"/>
    </FrameLayout>

</layout>
